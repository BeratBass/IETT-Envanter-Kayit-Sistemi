@model IslemlerListVM

<h2>Kayıt Düzenle</h2>

<form asp-action="UpdateIslemler" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Sicil" class="control-label"></label>
        <input asp-for="Sicil" class="form-control" />
        <span asp-validation-for="Sicil" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Marka" class="control-label"></label>
        <select asp-for="Marka" class="form-control">
            <option value="">Seçin</option>
            @foreach (var marka in Model.Modeller.Select(m => m.Marka).Distinct())
            {
                <option value="@marka">@marka</option>
            }
        </select>
        <span asp-validation-for="Marka" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Modeli" class="control-label"></label>
        <input asp-for="Modeli" class="form-control" />
        <span asp-validation-for="Modeli" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adet" class="control-label"></label>
        <input asp-for="Adet" class="form-control" />
        <span asp-validation-for="Adet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tarih" class="control-label"></label>
        <input asp-for="Tarih" class="form-control" type="date" />
        <span asp-validation-for="Tarih" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-controller="Islemler"  asp-action="Islemler" class="btn btn-secondary">İptal</a>
</form>

<style>
    form {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #555;
    }

    .form-group input,
    .form-group select {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: #fff;
        box-sizing: border-box;
    }

    .form-group input:focus,
    .form-group select:focus {
        border-color: #80bdff;
        outline: none;
        box-shadow: 0 0 5px rgba(128, 189, 255, 0.5);
    }

    .btn {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
        margin-top: 10px;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
    }
</style>